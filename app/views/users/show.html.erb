
<div id="user-show-page">

    <div id="user-header">
        <h1><%= @user.name %></h1>
        <h2><%= @user.position %></h2>
        <img src=<%= @user.image_url %>>
    </div>

    <div id="action-bar">
        <%= link_to "New Favorite Color", new_user_favorite_path(@user) %>
        <%= link_to "New Palette", new_user_palette_path(@user) %>
    </div>

    <h2 class="section-header"> Favorite Colors </h2>

    <div id="favorite-colors-container">
        <% @user.colors.each do |color| %>
            <div class="color-swatch-container">
                <%= link_to color_path(color) do %>
                    <div class="color-swatch" style="background:<%=color.hex_code%>;" ></div>
                    <h4><%=color.name%></h4>
                    <p><%=color.hex_code%></p>
                <% end %>
            </div>
        <% end %>
    </div>

    <h2 class="section-header"> Color Palettes </h2>

    <div id="palettes-container">
        <% @user.palettes.each do |palette| %>
            <fieldset class="palette-card">
                <legend><%= palette.name %></legend>
                <div class="palette-colors">
                    <% palette.colors.each do |color|%>

                        <div class="color-swatch-container">
                            <%= link_to color_path(color) do %>
                                <div class="color-swatch" style="background:<%=color.hex_code%>;" ></div>
                                <h4><%=color.name%></h4>
                                <p><%=color.hex_code%></p>
                            <% end %>
                        </div>

                    <% end %>
                </div>
            </fieldset>
        <% end %>
    </div>

</div>
